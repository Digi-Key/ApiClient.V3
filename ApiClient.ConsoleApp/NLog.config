<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwExceptions="false" internalLogFile="ApiClient.ConsoleApp-NLog.log" internalLogLevel="Error">
    <targets async="true">
        <target name="logFile" xsi:type="File"
                fileName="ApiClient.ConsoleApp.log"
                archiveNumbering="Rolling"
                archiveEvery="Day"
                concurrentWrites="true"
                maxArchiveFiles="14"
                layout="${longdate} ${uppercase:${level}} ${message}" />
    </targets>
    <rules>
        <logger name="*" minlevel="Debug" writeTo="logFile" />
    </rules>
</nlog>